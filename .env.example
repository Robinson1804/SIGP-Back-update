# ===========================================
# SIGP BACKEND - Environment Variables Template
# ===========================================
# Copy this file to .env and adjust values

# App
PORT=3010
NODE_ENV=development
CORS_ORIGIN=http://localhost:3011
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=sigp_inei
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true
DATABASE_SSL=false

# JWT
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=change-this-refresh-secret-in-production
JWT_REFRESH_EXPIRATION=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=sigp:

# MinIO (Storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1

# Bucket Names
MINIO_BUCKET_DOCUMENTOS=sigp-documentos
MINIO_BUCKET_ADJUNTOS=sigp-adjuntos
MINIO_BUCKET_AVATARES=sigp-avatares
MINIO_BUCKET_BACKUPS=sigp-backups

# URL TTLs (in seconds)
UPLOAD_URL_TTL=3600
DOWNLOAD_URL_TTL=3600
URL_CACHE_TTL=3000

# File Size Limits (in bytes)
MAX_FILE_SIZE=52428800
MAX_AVATAR_SIZE=2097152
MAX_DIRECT_UPLOAD_SIZE=10485760

# Cleanup Settings
FILE_RETENTION_DAYS=30
PENDING_UPLOAD_HOURS=24

# Processing
ENABLE_VIRUS_SCAN=false
ENABLE_THUMBNAILS=true
PROCESSING_MAX_RETRIES=3
